<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Website</title>
  <link rel="stylesheet" href="styles/main.css">
</head>
<body>
  <%- include("partials/header.ejs") %>
  <h1>Blog Website</h1>
  <form action="/create" method="GET" class="blog-form">
    <input type="submit" value="Create Blog">
  </form>
  
  <% if (blogs.length > 0) { %>
    <% blogs.forEach(blog => { %>
      <div class="blog-data">
        <h1>Title: <%= blog.title %></h1>
        <p class="description-label">Description:</p>
        <p><%= blog.description %></p>

        <!-- Edit Blog Form -->
        <form action="/edit/<%= blog.id %>" method="GET" class="blog-form">
          <input type="submit" value="Edit Blog">
        </form>
        <form action="/delete/<%= blog.id %>" method="POST" class="blog-form" onsubmit="return confirm('Are you sure you want to delete this blog?');">
          <input type="submit" value="Delete Blog">
      </form>
      
      
      </div>
    <% }) %>
  <% }  %>

  <%- include("partials/footer.ejs") %>
</body>
</html>
